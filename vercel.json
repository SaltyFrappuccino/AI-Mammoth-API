{
    "version": 2,
    "builds": [
      { 
        "src": "vercel_app.py", 
        "use": "@vercel/python", 
        "config": { "runtime": "python3.9", "installCommand": "pip install -r requirements-vercel.txt" } 
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/vercel_app.py" }
    ],
    "env": {
      "APP_MODULE": "vercel_app:app"
    }
  }